@using HospitalManagement.Models.EntityModels
@model DoctorDepartment
@using HospitalManagement.Models.ViewModels

@{
    PageHeader ph = new PageHeader() { Title = "Edit Doctor Department" };
}
<partial name="../Shared/Widgets/_PageHeader.cshtml" model="ph" />


<section class="content">
    <!-- Default box -->
    <div class="card">
        <partial name="../Shared/Widgets/_CardHeader.cshtml" />

        <div class="card-body">

            <form class="form-horizontal" asp-action="Edit" asp-controller="DoctorDepartment">

                

                <div class="form-group row">
                    <label for="Id" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" asp-for="Id" />
                    </div>
                </div>

                <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Name" />
                    </div>

                </div>

               

                <div class="card-footer">
                    <input class="btn btn-info" type="submit" value="Submit" name="Submit" />
                </div>
            </form>

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>