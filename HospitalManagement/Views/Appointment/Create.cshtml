@using HospitalManagement.Models.ViewModels
@using HospitalManagement.Models.EntityModels
@model Appointment


@{
    PageHeader ph = new PageHeader() { Title = "New Appointment" };
}
<partial name="../Shared/Widgets/_PageHeader.cshtml" model="ph" />




<section class="content">

    <!-- Default box -->
    <div class="card">
        <partial name="../Shared/Widgets/_CardHeader.cshtml" />
        <div class="card-body">

            @* <div class="card"> *@

            <!-- /.card-header -->
            <div class="card-body p-0">

                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">New Appointment</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" asp-controller="Appointment" asp-action="Save">
                        <div class="card-body">


                            @* <div class="form-group row">

                                <label for="PatientId" class="col-sm-2 col-form-label">Patient</label>

                                <div class="col-sm-10">
                                    <select class="form-control" name="PatientId">
                                        @foreach (var patient in Model)
                                        {
                                            <option value="@patient.Id">@patient.Name</option>
                                        }
                                    </select>
                                </div>

                            </div> *@


                            <div class="form-group row">
                                <label for="PatientId" class="col-sm-2 col-form-label">Patient</label>
                                <div class="col-sm-10">
                                    <select asp-for="PatientId" class="form-control">
                                        @foreach (var p in ViewBag.Patients)
                                        {
                                            <option value="@p.Id">@p.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>



                            <div class="form-group row">
                                <label for="DoctorId" class="col-sm-2 col-form-label">Doctor</label>
                                <div class="col-sm-10">
                                    <select asp-for="DoctorId" class="form-control">
                                        @foreach (var d in ViewBag.Doctors)
                                        {
                                            <option value="@d.Id">@d.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>


                            



                            
                            <div class="form-group row">
                                <label for="Fee" class="col-sm-2 col-form-label">Fee</label>
                                <div class="col-sm-10">
                                    <input type="text" name="Fee" class="form-control" id="Fee" placeholder="Fee">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label for="Date" class="col-sm-2 col-form-label"> Date</label>
                                <div class="col-sm-10">
                                    <input type="date" name="Date" class="form-control" id="Date" placeholder="Date ">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Time" class="col-sm-2 col-form-label">Time </label>
                                <div class="col-sm-10">
                                    <input type="time" name="Time" class="form-control" id="Time" placeholder="Time">
                                </div>
                            </div>







                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Sign in</button>
                            <button type="reset" class="btn btn-default float-right">Clear</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>

            </div>
            <!-- /.card-body -->
            @* </div> *@

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>